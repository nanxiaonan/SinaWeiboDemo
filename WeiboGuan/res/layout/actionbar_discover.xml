<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/searchbar_background"
    android:orientation="horizontal" >

    <LinearLayout
        
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/searchbar_textfield_background"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/letter_serach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/letter_search_icon" />

        <TextView
            android:id="@+id/seach_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="大家都在搜：刘晓庆"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/voice_recognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/message_voice_selector" />

</LinearLayout>